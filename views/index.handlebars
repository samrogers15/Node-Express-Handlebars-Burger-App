<nav class="navbar navbar-light bg-warning">
  <span class="navbar-brand mb-0 h1">Eat Da Burgers!</span>
</nav>

<br>

<div class="container">
    <div class="row">
        <div class="col-sm-4 border border-dark border-3 mx-auto burgerPic">
            <img src="/assets/img/burger.png" alt="cheeseburger">
        </div>
    </div>
</div>

<div class="container-lg">
    <br>
    <div class="container mx-auto burgersContainer">
        <div class="row mx-auto">
            <div class="col-md-4 border border-dark border-3 mx-auto ready mt-0">
                <h2 id="ready">Burgers: Ready To Eat!</h2>
                <div class="container">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <li>
                                    {{burger_name}}
                                    <button type="button" class="change-status btn btn-warning btn-sm" data-id="{{id}}">DEVOUR IT!</button>
                                </li>
                                <br>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="col-md-4 border border-dark border-3 mx-auto devoured mt-0">
                <h2 id="devoured">Burgers: Devoured!</h2>
                <div class="container">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <li>
                                    {{burger_name}}
                                </li>
                                <br>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <br>
    <br>
    
    <div class="col-md-10 border border-dark border-3 new">
        <div class="row mx-auto">
            <h2>Add a Burger!</h2>
        </div>
        <br>
        <form class="newBurgerForm">
            <div class="form-group row mx-auto">
                <div class="col-sm-2">
                    <label for="newBurgerName" class="col-form-label">Burger Name</label>
                </div>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="newBurgerName" placeholder="Enter a new burger name here!">
                </div>
            </div>
            <br>
            <div class="form-group row mx-auto">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Enter a new burger!</button>
                </div>
            </div>
            <br>
        </form>
    </div>
    <br>
    <br>
</div>
