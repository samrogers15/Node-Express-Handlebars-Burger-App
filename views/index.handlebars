 <nav class="navbar navbar-light bg-warning">
        <h1 class="navbar-brand mx-auto mb-0 h1">Eat Da Burgers!</h1>
</nav>

<div class="container-lg">
    <br>
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers: Ready To Eat!</h2>
            <div class="container readyBurgers">
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            <li>
                                {{burger_name}}
                                <button type="button" class="change-status btn btn-danger btn-sm" data-id="{{id}}">DEVOUR IT!</button>
                            </li>
                            <br>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Burgers: Devoured!</h2>
            <div class="container devouredBurgers">
                <ul>
                    {{#each burgers}}
                        {{#if devoured}}
                            <li>
                                {{burger_name}}
                            </li>
                            <br>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    
    <br>
    <br>

    <h2>Add a Burger!</h2>
    <form class="newBurgerForm">
        <div class="form-group row">
            <div class="col-sm-2">
                <label for="newBurgerName" class="col-form-label">Burger Name</label>
            </div>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="newBurgerName" placeholder="Enter a new burger name here!">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Enter a new burger!</button>
            </div>
        </div>
    </form>
</div>
