<div class="container-lg">
    <div class="row">
        <h1>Eat Da Burgers!</h1>
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers: READY TO EAT!</h2>
            <div class="container readyBurgers">
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            <li>
                                {{name}}
                                {{!-- <button class="change-status" data-id="{{id}}" data-newBurger="{{true}}"></button> --}}
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Burgers: DEVOURED!</h2>
            <div class="container devouredBurgers">
                <ul>
                    {{#each burgers}}
                        {{#if devoured}}
                            {{name}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    
    <br>
    <br>

    <h2>Add a Burger!</h2>
    <form class="newBurgerForm">
        <div class="form-group row">
            <div class="col-sm-2">
                <label for="newBurgerName" class="col-form-label">Burger Name</label>
            </div>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="newBurgerName" placeholder="Enter a new burger name here!">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Enter a new burger!</button>
            </div>
        </div>
    </form>
</div>
